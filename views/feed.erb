<header>
  <div class="container">
    <div class="row">
      <div class="col-sm-1">
        <% if @info[:image_url] %>
          <img src="<%= @info[:image_url] %>" alt="" />
        <% end %>
      </div>
      <div class="col-sm-10">
        <h1><%= linkify(@title) %></h1>
        <h5><%= linkify(@info[:description]) %></h5>
        <% if @info[:copyright] %>
          <h6><%= linkify(@info[:copyright]) %></h6>
        <% end %>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <article>
        <div class="row">
          <div class="col-sm-2">
            <% if item.key? :image_url %>
              <a href="<%= item[:link] %>" target="_blank">
                <img src="<%= item[:image_url] %>" alt="">
              </a>
            <% end %>
          </div>
          <div class="col-sm-8">
            <a href="<%= item[:link] %>" target="_blank">
              <h4><%= item[:title] %></h4>
            </a>
            <p><%= linkify(item[:description]) %></p>
          </div>
          <div class="col-sm-2 humantime"><%= item[:time_ago] %></div>
        </div>
      </article>
    <% end %>
  <% else %>
    <h3 class="text-center">No feed items to display</h3>
  <% end %>
</div>

